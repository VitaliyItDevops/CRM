@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page">
    @if (!IsLoginPage())
    {
        <NavMenu />
    }

    <main>
        @if (!IsLoginPage())
        {
            <div class="top-row px-4">
                <a class="navbar-brand" href="" style="display: flex; align-items: center; gap: 12px; text-decoration: none; margin-right: auto;">
                    <img src="logo.png" alt="bryx" class="animated-logo" style="height: 40px; width: auto; vertical-align: middle;" />
                    <span style="font-weight: 600; letter-spacing: -0.5px; font-size: 20.8px; line-height: 40px; vertical-align: middle; color: var(--apple-text-primary);">CRM</span>
                </a>
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
        }

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool IsLoginPage()
    {
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        return uri.AbsolutePath.Equals("/login", StringComparison.OrdinalIgnoreCase);
    }
}
