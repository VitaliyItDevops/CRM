    private async Task LoadPendingProducts()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();

        var query = context.Products.Where(p => p.Status == "–û–∂–∏–¥–∞–µ—Ç—Å—è");

        if (!string.IsNullOrEmpty(selectedViewCategory))
        {
            query = query.Where(p => p.Category == selectedViewCategory);
        }

        pendingProducts = await query
            .OrderBy(p => p.Category)
            .ThenBy(p => p.Name)
            .ToListAsync();

        // –ì—Ä—É–ø–ø–∏—Ä—É–µ–º —Ç–æ–≤–∞—Ä—ã –ø–æ –Ω–∞–∑–≤–∞–Ω–∏—é, —Ü–≤–µ—Ç—É, –∫–∞—Ç–µ–≥–æ—Ä–∏–∏, –ø–æ—Å—Ç–∞–≤—â–∏–∫—É –∏ –≤—Ä–µ–º–µ–Ω–∏ —Å–æ–∑–¥–∞–Ω–∏—è (—Å —Ç–æ—á–Ω–æ—Å—Ç—å—é –¥–æ –º–∏–Ω—É—Ç—ã)
        productGroups = pendingProducts
            .GroupBy(p => new
            {
                p.Name,
                Color = p.Color ?? "",
                p.Category,
                p.Supplier,
                p.PurchasePrice,
                p.PlannedPrice,
                // –û–∫—Ä—É–≥–ª—è–µ–º –≤—Ä–µ–º—è –¥–æ –º–∏–Ω—É—Ç—ã –¥–ª—è –≥—Ä—É–ø–ø–∏—Ä–æ–≤–∫–∏ —Ç–æ–≤–∞—Ä–æ–≤ –¥–æ–±–∞–≤–ª–µ–Ω–Ω—ã—Ö –≤ –æ–¥–Ω–æ –≤—Ä–µ–º—è
                CreatedMinute = new DateTime(p.CreatedAt.Year, p.CreatedAt.Month, p.CreatedAt.Day, p.CreatedAt.Hour, p.CreatedAt.Minute, 0)
            })
            .Select(g => new ProductGroup
            {
                Name = g.Key.Name,
                Color = string.IsNullOrEmpty(g.Key.Color) ? null : g.Key.Color,
                Category = g.Key.Category,
                Supplier = g.Key.Supplier,
                PurchasePrice = g.Key.PurchasePrice,
                PlannedPrice = g.Key.PlannedPrice,
                Quantity = g.Count(),
                CreatedAt = g.Key.CreatedMinute,
                ProductIds = g.Select(p => p.Id).ToList()
            })
            .OrderBy(g => g.Category)
            .ThenBy(g => g.Name)
            .ThenBy(g => g.Color)
            .ToList();

        StateHasChanged();
    }

