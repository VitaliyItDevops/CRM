    private async Task DeletePurchase()
    {
        if (productGroupToDelete == null) return;

        deleteError = "";

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();

            // –ü–æ–ª—É—á–∞–µ–º –≤—Å–µ —Ç–æ–≤–∞—Ä—ã –∏–∑ –≥—Ä—É–ø–ø—ã –ø–æ ID
            var productsToDelete = await context.Products
                .Where(p => productGroupToDelete.ProductIds.Contains(p.Id))
                .ToListAsync();

            if (!productsToDelete.Any())
            {
                deleteError = "–¢–æ–≤–∞—Ä—ã –Ω–µ –Ω–∞–π–¥–µ–Ω—ã!";
                StateHasChanged();
                return;
            }

            // –£–¥–∞–ª—è–µ–º –≤—Å–µ —Ç–æ–≤–∞—Ä—ã –∏–∑ –≥—Ä—É–ø–ø—ã
            context.Products.RemoveRange(productsToDelete);
            await context.SaveChangesAsync();

            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ —Ç–æ–≤–∞—Ä–æ–≤ –Ω–∞ –ø–æ—Å—Ç—É–ø–ª–µ–Ω–∏–∏
            await LoadPendingProducts();

            CloseDeleteConfirmModal();
        }
        catch (Exception ex)
        {
            deleteError = $"–û—à–∏–±–∫–∞ –ø—Ä–∏ —É–¥–∞–ª–µ–Ω–∏–∏: {ex.Message}";
