    private async Task DeletePurchase()
    {
        if (purchaseToDelete == null) return;

        deleteError = "";

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();

            // –ü–æ–ª—É—á–∞–µ–º –ø–æ–∫—É–ø–∫—É
            var purchase = await context.Purchases.FindAsync(purchaseToDelete.Id);
            if (purchase == null)
            {
                deleteError = "–ü–æ–∫—É–ø–∫–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω–∞!";
                StateHasChanged();
                return;
            }

            // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å –ø–æ–∫—É–ø–∫–∏ –Ω–∞ "–û—Ç–º–µ–Ω–µ–Ω–æ"
            purchase.Status = "–û—Ç–º–µ–Ω–µ–Ω–æ";
            purchase.Comment = string.IsNullOrWhiteSpace(cancelComment) ? null : cancelComment.Trim();
            purchase.UpdatedAt = DateTime.UtcNow;

            // –ü–æ–ª—É—á–∞–µ–º –≤—Å–µ —Ç–æ–≤–∞—Ä—ã –∏–∑ –ø–æ–∫—É–ø–∫–∏ –∏ —É–¥–∞–ª—è–µ–º –∏—Ö
            var productsToDelete = await context.Products
                .Where(p => p.PurchaseId == purchaseToDelete.Id)
                .ToListAsync();

            if (productsToDelete.Any())
            {
                context.Products.RemoveRange(productsToDelete);
            }

            await context.SaveChangesAsync();

            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ –ø–æ–∫—É–ø–æ–∫
            await LoadPendingProducts();

            CloseDeleteConfirmModal();
        }
        catch (Exception ex)
        {
            deleteError = $"–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–º–µ–Ω–µ: {ex.Message}";
            StateHasChanged();
        }
    }
