    private async Task SavePurchase()
    {
        purchaseError = "";

        // –í–∞–ª–∏–¥–∞—Ü–∏—è
        if (string.IsNullOrWhiteSpace(selectedCategory))
        {
            purchaseError = "–í—ã–±–µ—Ä–∏—Ç–µ –∫–∞—Ç–µ–≥–æ—Ä–∏—é!";
            StateHasChanged();
            return;
        }

        string finalProductName = "";
        if (showCustomProductName)
        {
            if (string.IsNullOrWhiteSpace(customProductName))
            {
                purchaseError = "–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞!";
                StateHasChanged();
                return;
            }
            finalProductName = customProductName.Trim();
        }
        else
        {
            if (string.IsNullOrWhiteSpace(productNameSelection))
            {
                purchaseError = "–í—ã–±–µ—Ä–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞!";
                StateHasChanged();
                return;
            }
            finalProductName = productNameSelection;
        }

        if (!purchasePrice.HasValue || purchasePrice.Value <= 0)
        {
            purchaseError = "–í–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—É—é —Ü–µ–Ω—É –∑–∞–∫—É–ø–∫–∏!";
            StateHasChanged();
            return;
        }

        if (string.IsNullOrWhiteSpace(selectedSupplier))
        {
            purchaseError = "–í—ã–±–µ—Ä–∏—Ç–µ –ø–æ—Å—Ç–∞–≤—â–∏–∫–∞!";
            StateHasChanged();
            return;
        }

        if (quantity < 1)
        {
            purchaseError = "–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –Ω–µ –º–µ–Ω—å—à–µ 1!";
            StateHasChanged();
            return;
        }

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();

            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Ñ–∏–Ω–∞–ª—å–Ω—ã–π —Ü–≤–µ—Ç
            string? finalColor = null;
            if (showCustomColor && !string.IsNullOrWhiteSpace(customColor))
            {
                finalColor = customColor.Trim();
            }
            else if (!string.IsNullOrWhiteSpace(colorSelection) && colorSelection != "__custom__")
            {
                finalColor = colorSelection;
            }

            // –°–æ–∑–¥–∞—ë–º N –æ–¥–∏–Ω–∞–∫–æ–≤—ã—Ö –∑–∞–ø–∏—Å–µ–π
            for (int i = 0; i < quantity; i++)
            {
                var product = new Product
                {
                    Category = selectedCategory,
                    Name = finalProductName,
                    Color = finalColor,
                    PurchasePrice = purchasePrice.Value,
                    SalePrice = 0, // –ë—É–¥–µ—Ç –∑–∞–ø–æ–ª–Ω–µ–Ω–æ –ø—Ä–∏ –ø—Ä–æ–¥–∞–∂–µ
                    PlannedPrice = plannedPrice,
                    Status = "–û–∂–∏–¥–∞–µ—Ç—Å—è",
                    Supplier = selectedSupplier,
                    IsDefective = false,
                    IsFavorite = false,
                    CreatedAt = DateTime.UtcNow
                };

                context.Products.Add(product);
            }

            await context.SaveChangesAsync();

            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ —Ç–æ–≤–∞—Ä–æ–≤ –Ω–∞ –ø–æ—Å—Ç—É–ø–ª–µ–Ω–∏–∏
            await LoadPendingProducts();

            CloseAddPurchaseModal();
        }
        catch (Exception ex)
        {
            purchaseError = $"–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏: {ex.Message}";
            StateHasChanged();
        }
    }

