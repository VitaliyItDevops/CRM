    private async Task ConfirmArrival()
    {
        if (selectedProductGroup == null) return;

        confirmError = "";

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();

            // –ü–æ–ª—É—á–∞–µ–º –≤—Å–µ —Ç–æ–≤–∞—Ä—ã –∏–∑ –≥—Ä—É–ø–ø—ã
            var products = await context.Products
                .Where(p => selectedProductGroup.ProductIds.Contains(p.Id))
                .ToListAsync();

            if (!products.Any())
            {
                confirmError = "–¢–æ–≤–∞—Ä—ã –Ω–µ –Ω–∞–π–¥–µ–Ω—ã!";
                StateHasChanged();
                return;
            }

            // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å –∏ –¥–∞—Ç—É –ø–æ—Å—Ç—É–ø–ª–µ–Ω–∏—è –¥–ª—è –≤—Å–µ—Ö —Ç–æ–≤–∞—Ä–æ–≤ –≥—Ä—É–ø–ø—ã
            var arrivalDateTime = arrivalDate.ToDateTime(TimeOnly.MinValue, DateTimeKind.Utc);
            foreach (var product in products)
            {
                product.Status = "–í –Ω–∞–ª–∏—á–∏–∏";
                product.ArrivalDate = arrivalDateTime;
                product.UpdatedAt = DateTime.UtcNow;
            }

            await context.SaveChangesAsync();

            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ —Ç–æ–≤–∞—Ä–æ–≤ –Ω–∞ –ø–æ—Å—Ç—É–ø–ª–µ–Ω–∏–∏
            await LoadPendingProducts();

            CloseConfirmArrivalModal();
        }
        catch (Exception ex)
        {
            confirmError = $"–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–∏: {ex.Message}";
            StateHasChanged();
        }
    }

