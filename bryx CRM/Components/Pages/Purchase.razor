        string finalProductName = "";
        if (showCustomProductName)
        {
            if (string.IsNullOrWhiteSpace(customProductName))
            {
                purchaseError = "–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞!";
                StateHasChanged();
                return;
            }
            finalProductName = customProductName.Trim();
        }
        else
        {
            if (string.IsNullOrWhiteSpace(productNameSelection))
            {
                purchaseError = "–í—ã–±–µ—Ä–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞!";
                StateHasChanged();
                return;
            }
            finalProductName = productNameSelection;
        }

        if (!priceInUSD.HasValue || priceInUSD.Value <= 0)
        {
            purchaseError = "–í–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—É—é —Ü–µ–Ω—É –≤ $!";
            StateHasChanged();
            return;
        }

        if (!exchangeRate.HasValue || exchangeRate.Value <= 0)
        {
            purchaseError = "–í–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π –∫—É—Ä—Å $!";
            StateHasChanged();
            return;
        }

        if (string.IsNullOrWhiteSpace(selectedSupplier))
        {
            purchaseError = "–í—ã–±–µ—Ä–∏—Ç–µ –ø–æ—Å—Ç–∞–≤—â–∏–∫–∞!";
            StateHasChanged();
            return;
        }

        if (quantity < 1)
        {
            purchaseError = "–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –Ω–µ –º–µ–Ω—å—à–µ 1!";
            StateHasChanged();
            return;
        }

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();

            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Ñ–∏–Ω–∞–ª—å–Ω—ã–π —Ü–≤–µ—Ç
            string? finalColor = null;
            if (showCustomColor && !string.IsNullOrWhiteSpace(customColor))
            {
                finalColor = customColor.Trim();
            }
            else if (!string.IsNullOrWhiteSpace(colorSelection) && colorSelection != "__custom__")
            {
                finalColor = colorSelection;
            }

            // –í—ã—á–∏—Å–ª—è–µ–º —Ü–µ–Ω—ã —Å —É–º–Ω—ã–º —Ä–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ–º –æ—Å—Ç–∞—Ç–∫–∞
            var totalPriceUSD = priceInUSD.Value;
            var totalPriceUAH = totalPriceUSD * exchangeRate.Value;

            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Ñ–∏–Ω–∞–ª—å–Ω—É—é –ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏—é
            string? finalSubcategory = null;
            if (selectedSubcategory == "__custom__" || !subcategories.Any())
            {
                if (!string.IsNullOrWhiteSpace(customSubcategory))
                {
                    finalSubcategory = customSubcategory.Trim();
                }
            }
            else if (!string.IsNullOrWhiteSpace(selectedSubcategory))
            {
                finalSubcategory = selectedSubcategory;
            }

            // –°–æ–∑–¥–∞—ë–º –∑–∞–ø–∏—Å—å –ø–æ–∫—É–ø–∫–∏
            var purchase = new PurchaseModel
            {
                PurchaseDate = DateTime.UtcNow,
                Category = selectedCategory,
                Subcategory = finalSubcategory,
                Supplier = selectedSupplier,
                TotalPriceUSD = totalPriceUSD,
                ExchangeRate = exchangeRate.Value,
                TotalPriceUAH = totalPriceUAH,
                Quantity = quantity,
                CreatedAt = DateTime.UtcNow
            };

            context.Purchases.Add(purchase);
            await context.SaveChangesAsync(); // –°–æ—Ö—Ä–∞–Ω—è–µ–º, —á—Ç–æ–±—ã –ø–æ–ª—É—á–∏—Ç—å PurchaseModel.Id

            // –ë–∞–∑–æ–≤–∞—è —Ü–µ–Ω–∞ –∑–∞ –µ–¥–∏–Ω–∏—Ü—É –≤ USD (–æ–∫—Ä—É–≥–ª–µ–Ω–Ω–∞—è –¥–æ 2 –∑–Ω–∞–∫–æ–≤)
            var pricePerUnitUSD = Math.Round(totalPriceUSD / quantity, 2);

            // –í—ã—á–∏—Å–ª—è–µ–º –æ—Å—Ç–∞—Ç–æ–∫ –≤ USD
            var totalRoundedUSD = pricePerUnitUSD * quantity;
            var differenceUSD = totalPriceUSD - totalRoundedUSD;

            // –ë–∞–∑–æ–≤–∞—è —Ü–µ–Ω–∞ –∑–∞ –µ–¥–∏–Ω–∏—Ü—É –≤ UAH (–æ–∫—Ä—É–≥–ª–µ–Ω–Ω–∞—è –¥–æ 2 –∑–Ω–∞–∫–æ–≤)
            var pricePerUnitUAH = Math.Round(totalPriceUAH / quantity, 2);

            // –í—ã—á–∏—Å–ª—è–µ–º –æ—Å—Ç–∞—Ç–æ–∫ –≤ UAH
            var totalRoundedUAH = pricePerUnitUAH * quantity;
            var differenceUAH = totalPriceUAH - totalRoundedUAH;

            // –°–æ–∑–¥–∞—ë–º N –∑–∞–ø–∏—Å–µ–π —Ç–æ–≤–∞—Ä–æ–≤, –ø—Ä–∏–≤—è–∑–∞–Ω–Ω—ã—Ö –∫ –ø–æ–∫—É–ø–∫–µ
            for (int i = 0; i < quantity; i++)
            {
                // –ü–µ—Ä–≤–æ–º—É —Ç–æ–≤–∞—Ä—É –¥–æ–±–∞–≤–ª—è–µ–º –æ—Å—Ç–∞—Ç–æ–∫, —á—Ç–æ–±—ã —Å—É–º–º–∞ –±—ã–ª–∞ —Ç–æ—á–Ω–æ–π
                var itemPriceUSD = (i == 0) ? Math.Round(pricePerUnitUSD + differenceUSD, 2) : pricePerUnitUSD;
                var itemPriceUAH = (i == 0) ? Math.Round(pricePerUnitUAH + differenceUAH, 2) : pricePerUnitUAH;

                var product = new Product
                {
                    Category = selectedCategory,
                    Name = finalProductName,
                    Color = finalColor,
                    PriceInUSD = itemPriceUSD,
                    ExchangeRate = exchangeRate.Value,
                    PurchasePrice = itemPriceUAH,
                    SalePrice = 0, // –ë—É–¥–µ—Ç –∑–∞–ø–æ–ª–Ω–µ–Ω–æ –ø—Ä–∏ –ø—Ä–æ–¥–∞–∂–µ
                    PlannedPrice = plannedPrice,
                    Status = "–û–∂–∏–¥–∞–µ—Ç—Å—è",
                    Supplier = selectedSupplier,
                    PurchaseId = purchase.Id, // –ü—Ä–∏–≤—è–∑—ã–≤–∞–µ–º –∫ –ø–æ–∫—É–ø–∫–µ
                    IsDefective = false,
                    IsFavorite = false,
                    CreatedAt = DateTime.UtcNow
                };

                context.Products.Add(product);
            }

            await context.SaveChangesAsync();

            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ —Ç–æ–≤–∞—Ä–æ–≤ –Ω–∞ –ø–æ—Å—Ç—É–ø–ª–µ–Ω–∏–∏
            await LoadPendingProducts();

            CloseAddPurchaseModal();
        }
        catch (Exception ex)
        {
            purchaseError = $"–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏: {ex.Message}";
            StateHasChanged();
        }
    }

