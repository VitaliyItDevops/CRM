    private async Task SaveSupplier()
    {
        supplierError = "";

        if (string.IsNullOrWhiteSpace(newSupplierName))
        {
            supplierError = "–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø–æ—Å—Ç–∞–≤—â–∏–∫–∞!";
            StateHasChanged();
            return;
        }

        try
        {
            var trimmedName = newSupplierName.Trim();

            using var context = await DbContextFactory.CreateDbContextAsync();

            var exists = await context.Suppliers
                .AnyAsync(s => s.Name.ToLower() == trimmedName.ToLower());

            if (exists)
            {
                supplierError = "–ü–æ—Å—Ç–∞–≤—â–∏–∫ —Å —Ç–∞–∫–∏–º –Ω–∞–∑–≤–∞–Ω–∏–µ–º —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç!";
                StateHasChanged();
                return;
            }

            var supplier = new Supplier
            {
                Name = trimmedName,
                CreatedAt = DateTime.UtcNow
            };

            context.Suppliers.Add(supplier);
            await context.SaveChangesAsync();

            await LoadSuppliers();
            selectedSupplier = trimmedName;

            CloseAddSupplierModal();
        }
        catch (Exception ex)
        {
            supplierError = $"–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏: {ex.Message}";
            StateHasChanged();
        }
    }

