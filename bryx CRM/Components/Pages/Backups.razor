@page "/backups"
@using bryx_CRM.Services
@using Microsoft.AspNetCore.Authorization
@inject BackupService BackupService
@inject ILogger<Backups> Logger
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Резервные копии - bryx CRM</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6 mb-3">
                <i class="bi bi-shield-check me-2"></i>
                Управление резервными копиями
            </h1>
            <p class="text-muted">Создание и восстановление бекапов базы данных PostgreSQL</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-plus-circle me-2"></i>
                        Создать новый бекап
                    </h5>
                    <p class="card-text text-muted mb-3">
                        Создаёт полную резервную копию базы данных в формате PostgreSQL custom format
                    </p>
                    <button class="btn btn-primary" @onclick="CreateBackup" disabled="@isCreatingBackup">
                        @if (isCreatingBackup)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Создание бекапа...</span>
                        }
                        else
                        {
                            <i class="bi bi-download me-2"></i>
                            <span>Создать бекап</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-info-circle me-2"></i>
                        Информация
                    </h5>
                    <p class="card-text mb-2">
                        <strong>Провайдер:</strong>
                        <span class="badge bg-primary">@BackupService.CurrentProviderType</span>
                    </p>
                    <p class="card-text mb-2 small text-muted">
                        @BackupService.CurrentProviderDescription
                    </p>
                    <hr />
                    <p class="card-text mb-2">
                        <strong>Всего бекапов:</strong> @backupList.Count
                    </p>
                    <p class="card-text mb-2">
                        <strong>Общий размер:</strong> @totalSize.ToString("F2") МБ
                    </p>
                    <p class="card-text mb-0">
                        <strong>Последний бекап:</strong>
                        @if (backupList.Any())
                        {
                            @backupList.First().CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        }
                        else
                        {
                            <span class="text-muted">Нет</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul me-2"></i>
                Список резервных копий
            </h5>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                    <p class="mt-3 text-muted">Загрузка списка бекапов...</p>
                </div>
            }
            else if (!backupList.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="mt-3 text-muted">Резервные копии отсутствуют</p>
                    <p class="text-muted">Создайте первый бекап нажав на кнопку выше</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Файл</th>
                                <th>Источник</th>
                                <th>Дата создания</th>
                                <th>Размер</th>
                                <th class="text-end">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var backup in backupList)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-file-earmark-zip me-2"></i>
                                        @backup.FileName
                                    </td>
                                    <td>
                                        <span class="badge @(backup.ProviderType.Contains("Railway") ? "bg-success" : "bg-secondary")">
                                            @backup.ProviderType
                                        </span>
                                    </td>
                                    <td>@backup.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                    <td>@backup.SizeMb.ToString("F2") МБ</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-success me-2"
                                                @onclick="() => RestoreBackup(backup)"
                                                disabled="@isRestoringBackup"
                                                title="Восстановить из этого бекапа">
                                            <i class="bi bi-arrow-counterclockwise me-1"></i>
                                            Восстановить
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger"
                                                @onclick="() => DeleteBackup(backup)"
                                                disabled="@(isCreatingBackup || isRestoringBackup)"
                                                title="Удалить бекап">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Модальное окно подтверждения восстановления -->
    @if (showRestoreConfirmation)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Подтверждение восстановления
                        </h5>
                        <button type="button" class="btn-close" @onclick="CancelRestore"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-2">
                            <strong>Внимание!</strong> Восстановление базы данных из бекапа:
                        </p>
                        <ul>
                            <li>Удалит все текущие данные в базе</li>
                            <li>Заменит их данными из резервной копии</li>
                            <li>Это действие необратимо</li>
                        </ul>
                        <p class="mb-0">
                            <strong>Файл:</strong> @backupToRestore?.FileName
                        </p>
                        <p class="mb-0">
                            <strong>Дата:</strong> @backupToRestore?.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelRestore">Отмена</button>
                        <button type="button" class="btn btn-warning" @onclick="ConfirmRestore" disabled="@isRestoringBackup">
                            @if (isRestoringBackup)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                <span>Восстановление...</span>
                            }
                            else
                            {
                                <span>Подтвердить восстановление</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<BackupInfo> backupList = new();
    private bool isLoading = true;
    private bool isCreatingBackup = false;
    private bool isRestoringBackup = false;
    private bool showRestoreConfirmation = false;
    private BackupInfo? backupToRestore = null;
    private string? successMessage;
    private string? errorMessage;
    private double totalSize = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadBackups();
    }

    private async Task LoadBackups()
    {
        try
        {
            isLoading = true;
            backupList = await BackupService.GetBackupListAsync();
            totalSize = backupList.Sum(b => b.SizeMb);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка при загрузке списка бекапов");
            errorMessage = "Ошибка при загрузке списка бекапов: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateBackup()
    {
        try
        {
            isCreatingBackup = true;
            successMessage = null;
            errorMessage = null;

            var backupPath = await BackupService.CreateBackupAsync();

            await LoadBackups();
            successMessage = $"Бекап успешно создан: {Path.GetFileName(backupPath)}";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка при создании бекапа");
            errorMessage = "Ошибка при создании бекапа: " + ex.Message;
        }
        finally
        {
            isCreatingBackup = false;
        }
    }

    private void RestoreBackup(BackupInfo backup)
    {
        backupToRestore = backup;
        showRestoreConfirmation = true;
    }

    private void CancelRestore()
    {
        backupToRestore = null;
        showRestoreConfirmation = false;
    }

    private async Task ConfirmRestore()
    {
        if (backupToRestore == null) return;

        try
        {
            isRestoringBackup = true;
            successMessage = null;
            errorMessage = null;

            var result = await BackupService.RestoreBackupAsync(backupToRestore.FilePath);

            if (result)
            {
                successMessage = $"База данных успешно восстановлена из бекапа: {backupToRestore.FileName}";
            }
            else
            {
                errorMessage = "Не удалось восстановить базу данных из бекапа";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка при восстановлении бекапа");
            errorMessage = "Ошибка при восстановлении бекапа: " + ex.Message;
        }
        finally
        {
            isRestoringBackup = false;
            showRestoreConfirmation = false;
            backupToRestore = null;
        }
    }

    private async Task DeleteBackup(BackupInfo backup)
    {
        try
        {
            successMessage = null;
            errorMessage = null;

            var result = await BackupService.DeleteBackupAsync(backup.FilePath);

            if (result)
            {
                await LoadBackups();
                successMessage = $"Бекап удалён: {backup.FileName}";
            }
            else
            {
                errorMessage = "Не удалось удалить бекап";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка при удалении бекапа");
            errorMessage = "Ошибка при удалении бекапа: " + ex.Message;
        }
    }
}
