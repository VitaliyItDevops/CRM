    // 🔥 Полностью обновлённый метод GenerateProductSummary()
    private async Task GenerateProductSummary()
    {
        if (products == null || !products.Any())
        {
            productSummary = null;
            return;
        }

        using var context = await DbContextFactory.CreateDbContextAsync();

        // Для сводки используем только товары "В наличии"
        var productsInStock = products.Where(p => p.Status == "В наличии").ToList();

        if (!productsInStock.Any())
        {
            productSummary = null;
            return;
        }

        var summaries = new List<ProductSummary>();

        // Группируем по Name + Color
        foreach (var group in productsInStock.GroupBy(p => new {
            Name = p.Name.Trim().ToLower(),
            Color = (p.Color ?? "").Trim().ToLower()
        }))
        {
            var name = group.First().Name;
            var color = group.First().Color;

            var expectedCount = await context.Products
                .Where(p => p.Name.ToLower() == group.Key.Name
                    && (p.Color ?? "").ToLower() == group.Key.Color
                    && p.Status == "Ожидается")
                .CountAsync();

            var shippedCount = await context.Products
                .Where(p => p.Name.ToLower() == group.Key.Name
                    && (p.Color ?? "").ToLower() == group.Key.Color
                    && p.Status == "Отправлено")
                .CountAsync();

            summaries.Add(new ProductSummary
            {
                Name = name,
                Color = color,
                Count = group.Count(),
                ExpectedCount = expectedCount,
                ShippedCount = shippedCount,
                Suppliers = string.Join(", ", group.Select(p => p.Supplier).Distinct().OrderBy(s => s))
            });
        }

        productSummary = summaries
            .OrderByDescending(s => s.Count)
            .ThenBy(s => s.Name)
            .ThenBy(s => s.Color)
            .ToList();
    }

