            product.IsFavorite = !product.IsFavorite;

            // Перезагружаем данные из БД
            await LoadProducts();
            ApplyFilters();

            productError = "Этот товар был изменен другим пользователем. Данные обновлены.";
            StateHasChanged();
        }
    }

    // Редактирование товара
    private bool showEditProductModal = false;
    private Product? editingProduct = null;
    private string editProductName = "";
    private string editProductColor = "";
    private decimal editPurchasePrice = 0;
    private DateTime editCreatedAt = DateTime.Today;
    private DateTime? editArrivalDate = null;
    private decimal editSalePrice = 0;
    private DateTime? editSaleDate = null;
    private DateTime? editDeliveryDate = null;
    private string editSupplier = "";
    private string editStatus = "";
    private string productError = "";

    private void ShowEditProductModal(Product product)
    {
        editingProduct = product;
        editProductName = product.Name;
        editProductColor = product.Color ?? "";
        editPurchasePrice = product.PurchasePrice;
        editCreatedAt = product.CreatedAt.ToLocalTime();
        editArrivalDate = product.ArrivalDate;
        editSalePrice = product.SalePrice;
        editSaleDate = product.SaleDate;
        editDeliveryDate = product.DeliveryDate;
        editSupplier = product.Supplier;
        editStatus = product.Status;
        productError = "";
        showEditProductModal = true;
        StateHasChanged();
    }

    private void CloseEditProductModal()
    {
        showEditProductModal = false;
        editingProduct = null;
        productError = "";
        StateHasChanged();
    }

    private async Task SaveProductChanges()
    {
        productError = "";
        StateHasChanged();

        if (string.IsNullOrWhiteSpace(editProductName))
        {
            productError = "Название товара обязательно!";
            StateHasChanged();
            return;
        }

        if (string.IsNullOrWhiteSpace(editSupplier))
        {
            productError = "Поставщик обязателен!";
            StateHasChanged();
            return;
        }

        if (editPurchasePrice <= 0)
        {
            productError = "Цена закупки должна быть больше нуля!";
            StateHasChanged();
            return;
        }

        if (editSalePrice <= 0)
        {
            productError = "Цена продажи должна быть больше нуля!";
            StateHasChanged();
            return;
        }

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();

            // Загружаем актуальную версию продукта из БД
            var productToUpdate = await context.Products.FindAsync(editingProduct!.Id);

            if (productToUpdate == null)
            {
                productError = "Товар не найден!";
                StateHasChanged();
                return;
            }

            // Обновляем только те поля, которые отображены в форме
            productToUpdate.Name = editProductName.Trim();
            productToUpdate.Color = string.IsNullOrWhiteSpace(editProductColor) ? null : editProductColor.Trim();
            productToUpdate.PurchasePrice = editPurchasePrice;
            productToUpdate.CreatedAt = editCreatedAt.ToUniversalTime();
            productToUpdate.ArrivalDate = editArrivalDate;
            productToUpdate.SalePrice = editSalePrice;
            productToUpdate.SaleDate = editSaleDate;
            productToUpdate.DeliveryDate = editDeliveryDate;
            productToUpdate.Supplier = editSupplier.Trim();
            productToUpdate.Status = editStatus;
            productToUpdate.UpdatedAt = DateTime.UtcNow;

            await context.SaveChangesAsync();

            // Обновляем локальный объект
            editingProduct.Name = productToUpdate.Name;
            editingProduct.Color = productToUpdate.Color;
            editingProduct.PurchasePrice = productToUpdate.PurchasePrice;
            editingProduct.CreatedAt = productToUpdate.CreatedAt;
            editingProduct.ArrivalDate = productToUpdate.ArrivalDate;
            editingProduct.SalePrice = productToUpdate.SalePrice;
            editingProduct.SaleDate = productToUpdate.SaleDate;
            editingProduct.DeliveryDate = productToUpdate.DeliveryDate;
            editingProduct.Supplier = productToUpdate.Supplier;
            editingProduct.Status = productToUpdate.Status;
            editingProduct.UpdatedAt = productToUpdate.UpdatedAt;

            // Обновляем список поставщиков и фильтры
            LoadSuppliers();
            await GenerateProductSummary();
            ApplyFilters();

            CloseEditProductModal();
        }
        catch (DbUpdateConcurrencyException)
        {
            // Перезагружаем данные из БД
            await LoadProducts();
            await GenerateProductSummary();
            ApplyFilters();

            productError = "Этот товар был изменен другим пользователем. Пожалуйста, повторите изменения с актуальными данными.";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            productError = $"Ошибка при сохранении: {ex.Message}";
            StateHasChanged();
        }
    }

    // Удаление товара
    private bool showDeleteConfirmModal = false;
    private Product? productToDelete = null;

    private void ShowDeleteConfirmModal(Product product)
    {
        productToDelete = product;
        showDeleteConfirmModal = true;
        StateHasChanged();
    }

    private void CloseDeleteConfirmModal()
    {
        showDeleteConfirmModal = false;
        productToDelete = null;
        StateHasChanged();
    }

    private async Task ConfirmDelete()
    {
        if (productToDelete == null) return;

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();

            // Загружаем продукт из БД
            var productInDb = await context.Products.FindAsync(productToDelete.Id);

            if (productInDb != null)
            {
                context.Products.Remove(productInDb);
                await context.SaveChangesAsync();

                // Удаляем из локального списка
                products?.Remove(productToDelete);

                // Обновляем фильтры и сводку
                LoadSuppliers();
                await GenerateProductSummary();
                ApplyFilters();
            }

            CloseDeleteConfirmModal();
        }
        catch (DbUpdateConcurrencyException)
        {
            // Перезагружаем данные из БД
            await LoadProducts();
            await GenerateProductSummary();
            ApplyFilters();

            productError = "Этот товар был изменен другим пользователем. Данные обновлены.";
            CloseDeleteConfirmModal();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            productError = $"Ошибка при удалении товара: {ex.Message}";
            CloseDeleteConfirmModal();
            StateHasChanged();
        }
    }
