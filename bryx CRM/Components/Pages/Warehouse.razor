@page "/warehouse"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using bryx_CRM.Data
@using bryx_CRM.Data.Models
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@attribute [Authorize]

<PageTitle>Склад</PageTitle>

<h3>Склад</h3>

@if (!string.IsNullOrEmpty(productError))
{
    <div class="global-error-message">
        <span>⚠️ @productError</span>
        <button class="error-close-btn" @onclick="@(() => { productError = ""; StateHasChanged(); })">✕</button>
    </div>
}

<div class="header-actions">
    <button class="btn-add-category" @onclick="ShowAddCategoryModal">+ Добавить категорию</button>
</div>

@if (selectedCategory == null)
{
    <div class="categories-grid">
        @foreach (var category in categories)
        {
            <div class="category-card" @onclick="@(() => SelectCategory(category))" @onclick:stopPropagation="true">
                <div class="category-icon">📦</div>
                <h4>@category</h4>
                <p class="item-count">@GetProductCount(category) товаров</p>
            </div>
        }
    </div>
}
else
{
    <div class="category-detail">
        <button class="btn-back" @onclick="@(() => GoBack())" @onclick:stopPropagation="true">← Назад к категориям</button>

        <h4>@selectedCategory</h4>

        <div class="summary-section">
            <button class="btn-toggle-summary" @onclick="ToggleSummary">
                @(showSummary ? "▼" : "▶") Сводка по товарам (@GetUniqueProductCount() уникальных)
            </button>

            @if (showSummary && productSummary != null && productSummary.Any())
            {
                <div class="summary-table-wrapper">
                    <table class="summary-table">
                        <thead>
                            <tr>
                                <th>Название</th>
                                <th>Цвет</th>
                                <th>Количество</th>
                                <th>Ожидается</th>
                                <th>Отправлено</th>
                                <th>Поставщики</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var summary in productSummary)
                            {
                                <tr>
                                    <td class="summary-name">@summary.Name</td>
                                    <td class="summary-color">@(summary.Color ?? "-")</td>
                                    <td class="summary-count">@summary.Count шт</td>
                                    <td class="summary-count">@summary.ExpectedCount шт</td>
                                    <td class="summary-count">@summary.ShippedCount шт</td>
                                    <td class="summary-suppliers">@summary.Suppliers</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <div class="filters-panel">
            <div class="filter-group">
                <label>🔍 Поиск по названию:</label>
                <input type="text" @bind="searchName" @bind:event="oninput" placeholder="Введите название..." class="filter-input" />
            </div>

            <div class="filter-group">
                <label>👤 Поставщик:</label>
                <select @bind="selectedSupplier" class="filter-select">
                    <option value="">Все поставщики</option>
                    @foreach (var supplier in suppliers)
                    {
                        <option value="@supplier">@supplier</option>
                    }
                </select>
            </div>

            <div class="filter-group">
                <label>📊 Сортировка:</label>
                <select @bind="sortOption" class="filter-select">
                    <option value="name-asc">По алфавиту (А-Я)</option>
                    <option value="name-desc">По алфавиту (Я-А)</option>
                    <option value="price-asc">По цене (дешевые → дорогие)</option>
                    <option value="price-desc">По цене (дорогие → дешевые)</option>
                    <option value="date-desc">По дате закупки (новые → старые)</option>
                    <option value="date-asc">По дате закупки (старые → новые)</option>
                    <option value="arrival-desc">По дате поступления (новые → старые)</option>
                    <option value="arrival-asc">По дате поступления (старые → новые)</option>
                </select>
            </div>

            <div class="filter-group">
                <label>💰 Фильтр по цене:</label>
                <select @bind="priceFilterType" class="filter-select">
                    <option value="">-- Не выбрано --</option>
                    <option value="purchase">Цена закупки</option>
                    <option value="sale">Цена продажи</option>
                </select>
            </div>

            @if (!string.IsNullOrEmpty(priceFilterType))
            {
                <div class="filter-group">
                    <label>💰 Цена от:</label>
                    <input type="number" @bind="priceFrom" @bind:event="oninput" placeholder="0" class="filter-input" min="0" />
                </div>

                <div class="filter-group">
                    <label>💰 Цена до:</label>
                    <input type="number" @bind="priceTo" @bind:event="oninput" placeholder="∞" class="filter-input" min="0" />
                </div>
            }

            <div class="filter-group">
                <label>📅 Фильтр по дате:</label>
                <select @bind="dateFilterType" class="filter-select">
                    <option value="">-- Не выбрано --</option>
                    <option value="purchase">Дата закупки</option>
                    <option value="arrival">Дата поступления</option>
                    <option value="sale">Дата продажи</option>
                    <option value="delivery">Дата доставки</option>
                </select>
            </div>

            @if (!string.IsNullOrEmpty(dateFilterType))
            {
                <div class="filter-group">
                    <label>📅 Дата от:</label>
                    <input type="date" @bind="dateFrom" @bind:event="oninput" class="filter-input" />
                </div>

                <div class="filter-group">
                    <label>📅 Дата до:</label>
                    <input type="date" @bind="dateTo" @bind:event="oninput" class="filter-input" />
                </div>
            }

            <div class="filter-group">
                <label class="checkbox-label">
                    <input type="checkbox" @bind="showFavoritesOnly" />
                    ⭐ Только избранное
                </label>
            </div>

            <div class="filter-group">
                <label class="checkbox-label">
                    <input type="checkbox" @bind="showDefectiveOnly" />
                    ⚠️ Только бракованные
                </label>
            </div>
        </div>

        <div class="items-list">
            @if (filteredProducts == null)
            {
                <p>Загрузка...</p>
            }
            else if (!filteredProducts.Any())
            {
                <p>Нет товаров по выбранным фильтрам</p>
            }
            else
            {
                <div class="table-wrapper">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>⭐</th>
                                <th>Название</th>
                                <th>Цвет</th>
                                <th>Цена $</th>
                                <th>Курс $</th>
                                <th>Цена UAH</th>
                                <th>Дата закупки</th>
                                <th>Дата поступления</th>
                                <th>Продажа</th>
                                <th>Дата продажи</th>
                                <th>Доставка клиенту</th>
                                <th>Поставщики</th>
                                <th>Статус</th>
                                <th>Брак</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in filteredProducts)
                            {
                                <tr class="@(product.IsDefective ? "defective-row" : "") @(product.IsFavorite ? "favorite-row" : "")">
                                    <td>
                                        <button @onclick="@(() => ToggleFavorite(product))" class="favorite-btn" title="Добавить в избранное">
                                            @(product.IsFavorite ? "⭐" : "☆")
                                        </button>
                                    </td>
                                    <td class="product-name">@product.Name</td>
                                    <td class="product-color">@(product.Color ?? "-")</td>
                                    <td class="price">@(product.PriceInUSD?.ToString("N2") ?? "-") $</td>
                                    <td class="price">@(product.ExchangeRate?.ToString("N2") ?? "-")</td>
                                    <td class="price">@(product.PriceInUSD.HasValue && product.ExchangeRate.HasValue ? (product.PriceInUSD.Value * product.ExchangeRate.Value).ToString("N2") : "-") ₴</td>
                                    <td class="date-cell">@product.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy")</td>
                                    <td class="date-cell">@(product.ArrivalDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                                    <td class="price">@product.SalePrice.ToString("N0") ₽</td>
                                    <td class="date-cell">@(product.SaleDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                                    <td class="date-cell">@(product.DeliveryDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                                    <td class="supplier">@product.Supplier</td>
                                    <td class="status">@product.Status</td>
                                    <td class="defect-cell">
                                        <input type="checkbox"
                                               checked="@product.IsDefective"
                                               @onchange="@(() => ToggleDefective(product))"
                                               class="defect-checkbox" />
                                    </td>
                                    <td class="actions-cell">
                                        <button @onclick="@(() => ShowEditProductModal(product))" class="btn-edit" title="Редактировать">
                                            ✏️
                                        </button>
                                        <button @onclick="@(() => ShowDeleteConfirmModal(product))" class="btn-delete" title="Удалить">
                                            🗑️
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
}

@if (showAddCategoryModal)
{
    <div class="modal-overlay" @onclick="CloseAddCategoryModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h4>Добавить новую категорию</h4>

            <div class="form-group">
                <label>Название категории:</label>
                <input type="text" @bind="newCategoryName" placeholder="Например: Мониторы" class="form-input" />
            </div>

            <div class="form-group">
                <label>Описание (необязательно):</label>
                <textarea @bind="newCategoryDescription" placeholder="Описание категории..." class="form-textarea" rows="3"></textarea>
            </div>

            @if (!string.IsNullOrEmpty(categoryError))
            {
                <div class="error-message">@categoryError</div>
            }

            <div class="modal-actions">
                <button class="btn-cancel" @onclick="CloseAddCategoryModal">Отмена</button>
                <button class="btn-save" @onclick="SaveCategory">Сохранить</button>
            </div>
        </div>
    </div>
}

@* Модальное окно редактирования товара *@
@if (showEditProductModal && editingProduct != null)
{
    <div class="modal-overlay" @onclick="CloseEditProductModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h4>Редактировать товар</h4>

            @if (!string.IsNullOrEmpty(productError))
            {
                <div class="error-message">
                    @productError
                </div>
            }

            <div class="form-group">
                <label>Название:</label>
                <input type="text" @bind="editProductName" class="form-input" />
            </div>

            <div class="form-group">
                <label>Цвет:</label>
                <input type="text" @bind="editProductColor" placeholder="Опционально" class="form-input" />
            </div>

            <div class="form-group">
                <label>Цена закупки:</label>
                <input type="number" @bind="editPurchasePrice" step="0.01" class="form-input" />
            </div>

            <div class="form-group">
                <label>Дата закупки:</label>
                <input type="date" @bind="editCreatedAt" class="form-input" />
            </div>

            <div class="form-group">
                <label>Дата поступления:</label>
                <input type="date" @bind="editArrivalDate" class="form-input" />
            </div>

            <div class="form-group">
                <label>Цена продажи:</label>
                <input type="number" @bind="editSalePrice" step="0.01" class="form-input" />
            </div>

            <div class="form-group">
                <label>Дата продажи:</label>
                <input type="date" @bind="editSaleDate" class="form-input" />
            </div>

            <div class="form-group">
                <label>Дата доставки:</label>
                <input type="date" @bind="editDeliveryDate" class="form-input" />
            </div>

            <div class="form-group">
                <label>Поставщик:</label>
                <input type="text" @bind="editSupplier" class="form-input" />
            </div>

            <div class="form-group">
                <label>Статус:</label>
                <select @bind="editStatus" class="form-input">
                    <option value="В наличии">В наличии</option>
                    <option value="Продано">Продано</option>
                    <option value="Ожидается">Ожидается</option>
                    <option value="Отправлено">Отправлено</option>
                </select>
            </div>

            <div class="modal-actions">
                <button class="btn-cancel" @onclick="CloseEditProductModal">Отмена</button>
                <button class="btn-save" @onclick="SaveProductChanges">Сохранить</button>
            </div>
        </div>
    </div>
}

@* Модальное окно подтверждения удаления *@
@if (showDeleteConfirmModal && productToDelete != null)
{
    <div class="modal-overlay" @onclick="CloseDeleteConfirmModal">
        <div class="modal-content confirm-modal" @onclick:stopPropagation="true">
            <h4>⚠️ Подтверждение удаления</h4>

            <p class="confirm-text">
                Вы уверены, что хотите удалить товар<br />
                <strong>"@productToDelete.Name"</strong>?
            </p>

            @if (!string.IsNullOrEmpty(productToDelete.Color))
            {
                <p class="confirm-detail">Цвет: @productToDelete.Color</p>
            }

            <p class="confirm-warning">
                ⚠️ Это действие нельзя отменить!
            </p>

            <div class="modal-actions">
                <button class="btn-cancel" @onclick="CloseDeleteConfirmModal">Отмена</button>
                <button class="btn-delete-confirm" @onclick="ConfirmDelete">Удалить</button>
            </div>
        </div>
    </div>
}

