            purchase.Comment = string.IsNullOrWhiteSpace(cancelComment) ? null : cancelComment.Trim();
            purchase.UpdatedAt = DateTime.UtcNow;

            // Получаем все товары из покупки и удаляем их
            var productsToDelete = await context.Products
                .Where(p => p.PurchaseId == purchaseToDelete.Id)
                .ToListAsync();

            if (productsToDelete.Any())
            {
                context.Products.RemoveRange(productsToDelete);
            }

            await context.SaveChangesAsync();

            // Обновляем список покупок
            await LoadPendingProducts();

            CloseDeleteConfirmModal();
        }
        catch (Exception ex)
        {
            deleteError = $"Ошибка при отмене: {ex.Message}";
            StateHasChanged();
        }
    }
}
