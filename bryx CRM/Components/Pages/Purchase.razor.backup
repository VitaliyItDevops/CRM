    private async Task LoadPendingProducts()
    {
        using var context = await DbContextFactory.CreateDbContextAsync();

        var query = context.Purchases
            .Include(p => p.Products)
            .AsQueryable();

        // Существующие фильтры
        if (!string.IsNullOrEmpty(selectedViewCategory))
        {
            query = query.Where(p => p.Category == selectedViewCategory);
        }

        if (!string.IsNullOrEmpty(selectedViewStatus))
        {
            query = query.Where(p => p.Status == selectedViewStatus);
        }

        // Новые фильтры
        if (!string.IsNullOrWhiteSpace(filterSupplier))
        {
            query = query.Where(p => p.Supplier.Contains(filterSupplier));
        }

        if (filterDateFrom.HasValue)
        {
            var dateFrom = filterDateFrom.Value.ToDateTime(TimeOnly.MinValue, DateTimeKind.Utc);
            query = query.Where(p => p.PurchaseDate >= dateFrom);
        }

        if (filterDateTo.HasValue)
        {
            var dateTo = filterDateTo.Value.ToDateTime(TimeOnly.MaxValue, DateTimeKind.Utc);
            query = query.Where(p => p.PurchaseDate <= dateTo);
        }

        if (filterPriceMin.HasValue)
        {
            query = query.Where(p => p.TotalPriceUAH >= filterPriceMin.Value);
        }

        if (filterPriceMax.HasValue)
        {
            query = query.Where(p => p.TotalPriceUAH <= filterPriceMax.Value);
        }

        // Применяем сортировку
        query = sortBy switch
        {
            "date_asc" => query.OrderBy(p => p.PurchaseDate),
            "price_desc" => query.OrderByDescending(p => p.TotalPriceUAH),
            "price_asc" => query.OrderBy(p => p.TotalPriceUAH),
            _ => query.OrderByDescending(p => p.PurchaseDate) // date_desc по умолчанию
        };

        purchases = await query.ToListAsync();

        StateHasChanged();
    }

