    private async Task SavePurchase()
    {
        purchaseError = "";

        // Валидация
        if (string.IsNullOrWhiteSpace(selectedCategory))
        {
            purchaseError = "Выберите категорию!";
            StateHasChanged();
            return;
        }

        string finalProductName = "";
        if (showCustomProductName)
        {
            if (string.IsNullOrWhiteSpace(customProductName))
            {
                purchaseError = "Введите название товара!";
                StateHasChanged();
                return;
            }
            finalProductName = customProductName.Trim();
        }
        else
        {
            if (string.IsNullOrWhiteSpace(productNameSelection))
            {
                purchaseError = "Выберите название товара!";
                StateHasChanged();
                return;
            }
            finalProductName = productNameSelection;
        }

        if (!priceInUSD.HasValue || priceInUSD.Value <= 0)
        {
            purchaseError = "Введите корректную цену в $!";
            StateHasChanged();
            return;
        }

        if (!exchangeRate.HasValue || exchangeRate.Value <= 0)
        {
            purchaseError = "Введите корректный курс $!";
            StateHasChanged();
            return;
        }

        if (string.IsNullOrWhiteSpace(selectedSupplier))
        {
            purchaseError = "Выберите поставщика!";
            StateHasChanged();
            return;
        }

        if (quantity < 1)
        {
            purchaseError = "Количество должно быть не меньше 1!";
            StateHasChanged();
            return;
        }

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();

            // Определяем финальный цвет
            string? finalColor = null;
            if (showCustomColor && !string.IsNullOrWhiteSpace(customColor))
            {
                finalColor = customColor.Trim();
            }
            else if (!string.IsNullOrWhiteSpace(colorSelection) && colorSelection != "__custom__")
            {
                finalColor = colorSelection;
            }

            // Вычисляем цены с умным распределением остатка
            var totalPriceUSD = priceInUSD.Value;
            var totalPriceUAH = totalPriceUSD * exchangeRate.Value;

            // Определяем финальную подкатегорию
            string? finalSubcategory = !string.IsNullOrWhiteSpace(selectedSubcategory) ? selectedSubcategory : null;

            // Создаём запись покупки
            var purchase = new PurchaseModel
            {
                PurchaseDate = DateTime.UtcNow,
                Category = selectedCategory,
                Subcategory = finalSubcategory,
                Supplier = selectedSupplier,
                TotalPriceUSD = totalPriceUSD,
                ExchangeRate = exchangeRate.Value,
                TotalPriceUAH = totalPriceUAH,
                Quantity = quantity,
                CreatedAt = DateTime.UtcNow
            };

            context.Purchases.Add(purchase);
            await context.SaveChangesAsync(); // Сохраняем, чтобы получить PurchaseModel.Id

            // Базовая цена за единицу в USD (округленная до 2 знаков)
            var pricePerUnitUSD = Math.Round(totalPriceUSD / quantity, 2);

            // Вычисляем остаток в USD
            var totalRoundedUSD = pricePerUnitUSD * quantity;
            var differenceUSD = totalPriceUSD - totalRoundedUSD;

            // Базовая цена за единицу в UAH (округленная до 2 знаков)
            var pricePerUnitUAH = Math.Round(totalPriceUAH / quantity, 2);

            // Вычисляем остаток в UAH
            var totalRoundedUAH = pricePerUnitUAH * quantity;
            var differenceUAH = totalPriceUAH - totalRoundedUAH;

            // Создаём N записей товаров, привязанных к покупке
            for (int i = 0; i < quantity; i++)
            {
                // Первому товару добавляем остаток, чтобы сумма была точной
                var itemPriceUSD = (i == 0) ? Math.Round(pricePerUnitUSD + differenceUSD, 2) : pricePerUnitUSD;
                var itemPriceUAH = (i == 0) ? Math.Round(pricePerUnitUAH + differenceUAH, 2) : pricePerUnitUAH;

                var product = new Product
                {
                    Category = selectedCategory,
                    Subcategory = finalSubcategory,
                    Name = finalProductName,
                    Color = finalColor,
                    PriceInUSD = itemPriceUSD,
                    ExchangeRate = exchangeRate.Value,
                    PurchasePrice = itemPriceUAH,
                    SalePrice = 0, // Будет заполнено при продаже
