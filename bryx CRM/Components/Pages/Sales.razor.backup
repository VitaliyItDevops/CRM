    private async Task AddItemToCart()
    {
        if (string.IsNullOrEmpty(selectedCategory) || string.IsNullOrEmpty(selectedProductName))
            return;

        // Проверяем, не добавлен ли уже этот товар с таким цветом
        var colorToCheck = string.IsNullOrEmpty(selectedColor) ? null : selectedColor;
        var existingItem = cartItems.FirstOrDefault(i => i.Category == selectedCategory && i.ProductName == selectedProductName && i.Color == colorToCheck);

        if (existingItem != null)
        {
            // Если товар уже в корзине, увеличиваем количество
            existingItem.Quantity++;
            showItemSelector = false;
            selectedCategory = "";
            selectedProductName = "";
            selectedColor = "";
            availableProductNames.Clear();
            availableColors.Clear();
            saleError = "";
            StateHasChanged();
            return;
        }

        // Получаем цену товара для предзаполнения
        using var context = await DbContextFactory.CreateDbContextAsync();
        var query = context.Products
            .Where(p => p.Category == selectedCategory && p.Name == selectedProductName && p.Status == "В наличии");

        // Фильтруем по цвету если он выбран
        if (!string.IsNullOrEmpty(selectedColor))
        {
            query = query.Where(p => p.Color == selectedColor);
        }

        var product = await query
            .OrderByDescending(p => p.Id)
            .FirstOrDefaultAsync();

        if (product == null)
        {
            saleError = "Товар не найден в наличии!";
            StateHasChanged();
            return;
        }

        var cartItem = new CartItem
        {
            Category = selectedCategory,
            Subcategory = product.Subcategory,
            ProductName = selectedProductName,
            Color = string.IsNullOrEmpty(selectedColor) ? null : selectedColor,
            SalePrice = product.PlannedPrice ?? product.PurchasePrice
        };

        cartItems.Add(cartItem);

        showItemSelector = false;
        selectedCategory = "";
        selectedProductName = "";
        selectedColor = "";
        availableProductNames.Clear();
        availableColors.Clear();
        saleError = "";
        StateHasChanged();
    }

    private void RemoveItemFromCart(CartItem item)
    {
        cartItems.Remove(item);
        StateHasChanged();
    }

    private async Task ToggleAccessories(int index)
    {
        if (expandedAccessoriesIndex == index)
        {
            // Скрываем аксессуары
            expandedAccessoriesIndex = null;
            availableAccessories = null;
        }
        else
        {
            // Показываем аксессуары
            expandedAccessoriesIndex = index;
            await LoadAccessories(index);
        }
        StateHasChanged();
    }

    private async Task LoadAccessories(int cartItemIndex)
    {
        if (cartItemIndex < 0 || cartItemIndex >= cartItems.Count)
        {
            availableAccessories = null;
            return;
        }

        var cartItem = cartItems[cartItemIndex];

        using var context = await DbContextFactory.CreateDbContextAsync();

        // Загружаем товары, у которых подкатегория равна категории основного товара
        // Например: товар в категории "Наушники" → показываем товары с подкатегорией "Наушники"
        // Исключаем товары, которые уже в корзине
        var cartProductNames = cartItems.Select(i => i.ProductName.ToLower()).ToList();

        var allAccessories = await context.Products
            .Where(p => p.Subcategory == cartItem.Category
                && p.Status == "В наличии"
                && !cartProductNames.Contains(p.Name.ToLower()))
            .OrderBy(p => p.Name)
            .ToListAsync();

        // Группируем по Name и Color, берем первый товар из каждой группы
        availableAccessories = allAccessories
            .GroupBy(p => new { Name = p.Name.ToLower(), Color = (p.Color ?? "").ToLower() })
            .Select(g => g.First())
            .ToList();
    }

    private async Task AddAccessoryToCart(Product accessory)
