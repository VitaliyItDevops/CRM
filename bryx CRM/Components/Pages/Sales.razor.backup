            return;
        }

        var cartItem = new CartItem
        {
            Category = accessory.Category,
            Subcategory = accessory.Subcategory,
            ProductName = accessory.Name,
            Color = accessory.Color,
            SalePrice = accessory.PlannedPrice ?? accessory.PurchasePrice,
            IsAccessory = true  // Помечаем как аксессуар
        };

        cartItems.Add(cartItem);

        // Перезагружаем аксессуары чтобы обновить список
        if (expandedAccessoriesIndex.HasValue)
        {
            await LoadAccessories(expandedAccessoriesIndex.Value);
        }

        StateHasChanged();
    }

    private async Task CompleteSale()
    {
        saleError = "";

        // Валидация
        if (string.IsNullOrWhiteSpace(buyer))
        {
            saleError = "Укажите покупателя!";
